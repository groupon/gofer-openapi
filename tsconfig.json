{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "lib/typedefs",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "types": [
      "node",
      "mocha"
    ]
  },
  "exclude": [
    "test"
  ],
  "include": [
    "typings/**/*.d.ts",
    "*.js",
    "lib/**/*.js",
    "test/**/*.js"
  ]
}

{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "../typings/**/*.d.ts",
    "**/*.ts"
  ]
}